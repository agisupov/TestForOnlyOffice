@page
@model TestForOnlyOffice.Pages.Persons.IndexModel
@using Microsoft.AspNetCore.Mvc.Localization
@using TestForOnlyOffice.Classes;
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Index Title"];
}

<h1>@ViewData["Title"]</h1>

@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-page="Create">@SharedLocalizer["Create New"]</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @SharedLocalizer["FirstName"]
            </th>
            <th>
                @SharedLocalizer["LastName"]
            </th>
            <th>
                @SharedLocalizer["Email"]
            </th>
            @if (User.Identity.IsAuthenticated)
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PersonList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">@SharedLocalizer["Edit"]</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">@SharedLocalizer["Details"]</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">@SharedLocalizer["Delete"]</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
