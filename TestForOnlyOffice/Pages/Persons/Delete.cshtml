@page
@model TestForOnlyOffice.Pages.Persons.DeleteModel
@using Microsoft.AspNetCore.Mvc.Localization
@using TestForOnlyOffice.Classes;
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Delete Title"];
}

<h1>@ViewData["Title"]</h1>

<h3>@SharedLocalizer["Delete question"]</h3>
<div>
    <h4>@SharedLocalizer["Person"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @SharedLocalizer["FirstName"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.FirstName)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["LastName"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.LastName)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["Email"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Email)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Person.Id" />
        <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-danger" /> |
        <a asp-page="./Index">@SharedLocalizer["Back To List"]</a>
    </form>
</div>
